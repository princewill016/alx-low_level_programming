CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): m.h $(OBJ)
	$(CC) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -Wall -Werror -Wextra -pedantic -c $< -o $@

clean:
	rm -f *~ \#*# .\#* $(NAME)

oclean:
	rm -f $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
